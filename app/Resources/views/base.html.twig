                        {#{% endfor %}#}
                        {#</tbody>#}
                    {#</table>#}
                {% endblock %}
            </div>
            <div class="col-md-3">
                {% block sidebar %}
                    <h2>Sidebar</h2>
                    <p>This is a sidebar.</p>
                {% endblock %}
            </div>
        </div>

        <hr>

        <footer>
            <p>&copy; 2016 Music Diff.</p>
        </footer>
    </div> <!-- /container -->
{% endblock %}
</body>
</html>
