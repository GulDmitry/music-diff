                            {#<th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Published</th>#}
                            {#<th scope="col"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>#}
                        {#</tr>#}
                        {#</thead>#}
                        {#<tbody>#}
                        {#{% for record in records %}#}
